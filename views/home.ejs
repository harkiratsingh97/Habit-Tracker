<link rel="stylesheet" href="/css/home.css" />

<div class="row justify-content-center">
	<div class="col-4" id="habit-tracker-container">
		<div id="habit-tracker-head" class="row">
			<h2 id="heading">Habit Tracker</h2>

			<div class="row justify-content-between">
				<div class="col-3"><a href="/week-view">Week View</a></div>
				<div class="col-3">
					<h6 id="add-new-habit" onclick="createHabit()">Create Habit</h6>
				</div>
			</div>
		</div>
		<div id="habits-container" class="row">
			<%if(habits.length==0){%>
			<h4 class="mt-3" style="text-align: center">No habits to track</h4>
			<%}%> <%for(habit of habits){%>
			<div id="item-1" class="row habits">
				<div class="row">
					<div id="habit-name" class="col-7"><%=habit.name%></div>
					<div class="col-2">
						<div
							class="done-notDone"
							onclick="trackHabit('<%= habit.id %>','Done', '<%=habit.habitTracked[habit.habitTracked.length-1]._id%>')"
						>
							Done
						</div>
					</div>
					<div class="col-3">
						<div
							class="done-notDone"
							onclick="trackHabit('<%= habit.id %>','Not Done', '<%=habit.habitTracked[habit.habitTracked.length-1]._id%>')"
						>
							Not Done
						</div>
					</div>
				</div>
				<div class="row detailsInView justify-content-between">
					<!-- <div class="col-3"><%=habit.daysTillNow%> days</div> -->
					<!-- <div class="col-3">6 best</div> -->
					<div class="col-3"><%=habit.weeklyCompleted%>/7 days</div>
					<div class="col-3 delete-habit-container">
						<a id="delete-habit-button" href="/habit/delete/<%=habit._id%>">Delete Habit</a>
					</div>
				</div>
			</div>
			<%}%>
		</div>
		<!-- <div id="add-new-habit">+</div> -->
	</div>
</div>

<script src="/js/home.js"></script>
